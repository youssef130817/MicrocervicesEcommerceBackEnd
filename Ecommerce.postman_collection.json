							}
						}
					]
				},
				{
					"name": "Products",
					"item": [
						{
							"name": "Get Products (with filters)",
							"request": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/api/products?page=1&pageSize=10&category=electronics&search=phone&sortBy=price&sortOrder=desc",
									"host": ["{{baseUrl}}"],
									"path": ["api", "products"],
									"query": [
										{
											"key": "page",
