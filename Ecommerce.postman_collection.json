							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"productId\": \"{{productId}}\",\n    \"quantity\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/cart/items",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "items"]
