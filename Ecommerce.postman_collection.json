				{
					"name": "Categories",
					"item": [
						{
							"name": "Get All Categories",
							"request": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/api/categories",
									"host": ["{{baseUrl}}"],
									"path": ["api", "categories"]
