										},
										{
											"key": "search",
											"value": "phone"
										},
										{
											"key": "sortBy",
											"value": "price"
										},
										{
											"key": "sortOrder",
											"value": "desc"
										}
									]
								}
							}
						},
						{
							"name": "Create Product",
							"request": {
								"method": "POST",
								"body": {
									"mode": "formdata",
									"formdata": [
										{
											"key": "name",
											"value": "New Smartphone",
											"type": "text"
